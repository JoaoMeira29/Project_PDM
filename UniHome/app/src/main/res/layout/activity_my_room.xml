<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".MyRoomActivity">

    <ScrollView
        android:id="@+id/myroom_background_shape_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">
            <ImageView
                android:id="@+id/myroom_exit_arrow_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/exit_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/myroom_smart_lock_ll"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:background="@drawable/rectangle_background">
            <TextView
                android:id="@+id/myroom_smart_lock_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Unlock your room"
                android:textColor="@color/keppel"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/myroom_smart_lock_iv"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/smart_lock" />
            <TextView
                android:id="@+id/myroom_smart_lock_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Room Unlocked!"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/keppel"
                android:layout_gravity="center"/>


        </LinearLayout>

            <LinearLayout
                android:id="@+id/myroom_ac_ll"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:background="@drawable/rectangle_background">
                <TextView
                    android:id="@+id/myroom_ac_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Air Condicioner"
                    android:textColor="@color/keppel"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="24º"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/less_circleButton"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="—"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="@drawable/circle_background" />
                    <View
                        android:id="@+id/On_Off_circleButton"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/op1" />
                    <Button
                        android:id="@+id/more_circleButton"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="+"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="@drawable/circle_background" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myroom_blinds_ll"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:background="@drawable/rectangle_background">
                <TextView
                    android:id="@+id/myroom_blinds_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Blinds"
                    android:textColor="@color/keppel"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <View
                        android:id="@+id/myroom_blinds_v"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/blinds" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <View
                        android:id="@+id/myroom_up_arrow_v"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/up" />

                    <View
                        android:id="@+id/myroom_down_arrow_v"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/down" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/myroom_locker_ll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:background="@drawable/rectangle_background">
            <TextView
            android:id="@+id/myroom_locker_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Locker"
            android:textColor="@color/keppel"
            android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <View
                    android:id="@+id/myroom_locker_v"
                    android:layout_width="60dp"
                    android:layout_height="65dp"
                    android:background="@drawable/locker" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/myroom_unlock_v"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Open locker" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
